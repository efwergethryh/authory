<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        landing
    </title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="/socket.io/socket.io.js"></script>
</head>

<body>

    <%- include('./layouts/SideBar') %>
    <%- include('./layouts/topBar') %>        
            <form class="add-conversation" id="add_conversation" action="" enctype="multipart/form-data">
                <i class="fa"></i>
                <h3>Create a new conversation</h3>
                <input type="text" id="title" name="title" placeholder="Enter conversation name" required>
                <div class="avatar-upload">
                    <input type="file" hidden id="conversation_picture" name="conv_pic" accept="image/*" />
                    <label for="conversation_picture" id="avatar-label" class="avatar-button">
                        <div id="avatar-preview" class="avatar-preview"></div>
                    </label>
                </div>

                <input id="user-name" name="user_name" type="text" placeholder="Enter a member to add" required>
                <ul id="users_dropdown" class="users_dropdown"></ul>
                <button id="add-conv">Create</button>
            </form>
            <div id="maincontent" class="mainContent">
            </div>

            <div id="options-popup" style="display: none;" class="options-popup">
                <div class="options-popup-content">
                    <ul>
                        <label for="image-input">
                            <a>
                                <i class="fa-solid fa-camera"></i>
                                <p>photos</p>
                            </a>
                        </label>
                        <input type="file" id="image-input" style="display: none;" name="file" accept="image/*" />

                        <label for="file-input">
                            <a>
                                <i class="fa-regular fa-file"></i>
                                <p>Document</p>
                            </a>
                        </label>
                        <input type="file" id="file-input" style="display: none;" name="file"
                            accept=".pdf,.doc,.docx,.txt,.xls,.xlsx,.ppt,.pptx" />
                    </ul>

                </div>
            </div>

            <div id="paper-settings" class="paper-settings">
                <ul>
 
                    <a id="editPaper">
                        <i class="fa-solid fa-pen"></i>
                        <p>Edit paper</p>
                    </a>
                    <a id="delete-user-from-paper">
                        <i class="fa-solid fa-user-xmark"></i>
                        <p>Delete a user from paper</p>
                    </a>
                    <a id="deletePaper">
                        <i class="fa-solid fa-trash" style="color: red;"></i>
                        <p style="color: red;">Delete paper</p>
                    </a>
                </ul>
            </div>
            <div id="users-to-delete" class="users-to-delete">

            </div>
            <div id="confirm-delete" class="confirm-delete">
                <p>Do you want to delete this paper?</p>
                <div class="buttons">
                    <a id="cancel">cancel</a>
                    <a onclick="delete_paper()" id="confirm">confirm</a>
                </div>
            </div>
            <div class="edit-paper">

            </div>
            <img src="/images/Book.gif" class="loading-spinner" id="loading-spinner" alt="">
            <div id="userProfile" class="userProfile">
                
            </div>
            <script src="/js/home.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/ejs@latest/ejs.min.js"></script>

</body>